
	DocumentRoot /srv/ath/pub/mng

	<Directory /srv/ath/pub/mng/>
		AllowOverride None
		Options +MultiViews +Indexes
        AddType application/x-httpd-php .php
		Order allow,deny
		allow from all
                Require all granted
	</Directory>
	
	ScriptAlias /bin/ /srv/ath/src/perl/mng/
	
        <Directory /srv/ath/src/perl/mng/>   
			AllowOverride None
			Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
			Order allow,deny
			Allow from all
                Require all granted
        </Directory>
        

                AllowOverride None
                Order allow,deny
                Allow from all
                Require all granted
        </Directory>
	Alias /css/ /srv/ath/src/css/
        <Directory /srv/ath/src/css/>
                AllowOverride None
                Order allow,deny
                Allow from all
                Require all granted
        </Directory>
	
	Alias /img/ /srv/ath/src/img/
        <Directory /srv/ath/src/img/>
                AllowOverride None
                Order allow,deny
                Allow from all
                Require all granted
        </Directory>
	
	php_admin_value open_basedir /tmp:/srv/ath:/srv/ath/var/data:/srv/ath/var/files:/srv/sites:/srv/ath/adm/build/skel
			
